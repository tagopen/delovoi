section.plan
  .container.plan__container
    .row.justify-content-center.plan__row
      .col-24.col-sm-20.col-lg-14.offset-lg-10.text-center.text-lg-left
        h2.heading.plan__heading
          span.heading__text.heading__text.heading__text--white!=content.index.plan.heading 
          i.ic.ic--headingborderright.heading__icon
        .plan__subheading!=content.index.plan.subheading 
      .col-24.col-sm-20.offset-sm-2.col-md-14.offset-md-10.col-lg-14.offset-lg-10
        form.contact__form.contactForm.contactForm--modal(method='post', action='./mail/mail.php')
          .row
            .col-24.col-xl-9.form-group.form__group
              label.input__heading.input__heading--black!=content.index.plan.form.title   
              input.form-control.form__input.form__input--small.form__phone.form__input--phone(aria-invalid='false', placeholder="+38 (___) ___-__-__", name='phone', type='tel', required)
            .col-24.col-xl-15.d-flex.align-items-end
              button.button.button--size.form__btn.plan__btn(name='form', value='Маркетинговый план', type='submit', data-loading-text="<i class='fa fa-circle-o-notch fa-spin'></i> Файл отправляется...")
                span.plan__btn--text!=content.index.plan.form.btn
            .col-24
              .success
    .plan__icon
      //- i.ic.ic--kit1200.hidden-md-down
      //- i.ic.ic--kit760.hidden-lg-up           
      i.ic.ic--plan1200.hidden-md-down
      i.ic.ic--plan320.hidden-lg-up   